<div class="social-proof-container" id="social-proof-container"></div>

<style>
  .social-proof-container {
    margin: 20px 0;
    font-size: 14px;
    line-height: 1.5;
    color: #333;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-weight: 400;
    perspective: 1000px; /* Needed for 3D flip */
  }
  .social-proof-container .emoji {
    font-size: 16px;
  }
  .social-proof-container .highlight {
    font-weight: 600;
    color: #085e60; /* Orange highlight */
  }

  .social-proof-text {
    display: inline-block;
    transform-origin: center;
    backface-visibility: hidden;
    animation: flipIn 0.6s ease forwards;
  }

  @keyframes flipIn {
    0% { transform: rotateX(90deg); opacity: 0; }
    50% { transform: rotateX(-20deg); opacity: 0.5; }
    100% { transform: rotateX(0); opacity: 1; }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const container = document.getElementById("social-proof-container");

    const messages = [
      'üöÄ <span class="highlight">1K items</span> added to cart in the last 3 days.',
      'üî• <span class="highlight">10+ items</span> sold in the last 24 hours.',
      'üß° <span class="highlight">3K people</span> favorited this.',
      'üëÄ <span class="highlight">217 views</span> in the last 24 hours.',
      '‚≠ê <span class="highlight">Rated 4.9/5</span> by happy customers.',
      '‚ö° <span class="highlight">5 people</span> bought this in the last hour.'
    ];

    function showMessage() {
      const randomIndex = Math.floor(Math.random() * messages.length);
      container.innerHTML = `<div class="social-proof-text">${messages[randomIndex]}</div>`;
    }

    // First message
    showMessage();

    // Change every 3s
    setInterval(showMessage, 3000);
  });
</script>



